<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceryDonatedOrg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        style="?actionBarStyle"
        android:id="@+id/grocerydonatedtoolbar"
        android:background="@color/Pista"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/border">
        <TextView
            android:id="@+id/gdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/clothesdonatedforage"
            android:text="Donor Name :"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:text="sample text"
            android:layout_height="wrap_content"
            android:id="@+id/gdnametv"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/border">
        <TextView
            android:id="@+id/gdmbno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/clothesdonatedforage"
            android:text="Donor Mobile Number :"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:text="sample text"
            android:layout_height="wrap_content"
            android:id="@+id/gdmbnotv"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Call Donor"
            android:id="@+id/gcallbutton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/border">
        <TextView
            android:id="@+id/gdemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/clothesdonatedforage"
            android:text="Donor E mail :"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:text="sample text"
            android:layout_height="wrap_content"
            android:id="@+id/gdemailtv"/>
        />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donatedRawMaterial"
        android:text="Type Of Raw Material Donor Donated"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="sample text"
        android:textSize="20dp"
        android:id="@+id/edtdonatedrawmaterial"
        android:layout_below="@+id/RawMaterial"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donatedAmountOfRawmaterial"
        android:text="Amount of Raw Material Donated : "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="sample text"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/edtdonatedamountinkg"
        android:layout_below="@+id/donatedAmountOfRawmaterial"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlay"
        android:layout_below="@+id/edittxt_weight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample text"
            android:id="@+id/dategrocery"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>