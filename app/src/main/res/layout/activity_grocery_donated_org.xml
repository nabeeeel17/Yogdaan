<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceryDonatedOrg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        style="?actionBarStyle"
        android:id="@+id/grocerydonatedtoolbar"
        android:background="@color/Pista"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donatedRawMaterial"
        android:text="Type Of Raw Material You Donated"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>



    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="e.g:Grains,sugar.."
        android:textSize="20dp"
        android:id="@+id/edtdonatedrawmaterial"
        android:layout_below="@+id/RawMaterial"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donatedAmountOfRawmaterial"
        android:text="Amount of Raw Material Donated : "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="In kg's"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/edtdonatedamountinkg"
        android:layout_below="@+id/donatedAmountOfRawmaterial"
        />

</LinearLayout>